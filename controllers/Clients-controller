const { Clients } = require('../models');

const clientsController = {
// get all Clients
getAllClients(req, res) {
    Clients.find({})
    .populate({
        path: 'Groups',
        select: '-__v'
    })
      .select('-__v')
      .sort({ _id: -1 })
      .then(dbClientsData => res.json(dbClientsData))
      .catch(err => {
        console.log(err);
        res.sendStatus(400);
      });
    },

      // get one client by ID
  getClientsById({ params }, res) {
    Clients.findOne({ _id: params.id })
    .populate({
        path: 'Groups',
        select: '-__v'
    })
      .select('-__v')
      .then(dbClientsData => res.json(dbClientsData))
      .catch(err => {
        console.log(err);
        res.sendStatus(400);
      });
  },

   // create a Client
   createClients({ body }, res) {
    Clients.create(body)
      .then(dbClientsData => res.json(dbClientsData))
      .catch(err => res.json(err));
  },

    // update Client by id
    updateClients({ params, body }, res) {
        Clients.findOneAndUpdate({ _id: params.id }, body, { new: true, runValidators: true })
          .then(dbClientsData => {
            if (!dbClientsData) {
              res.status(404).json({ message: 'No Client found with this id!' });
              return;
            }
            res.json(dbClientsData);
          })
          .catch(err => res.json(err));
      },

        // delete Client
  deleteClients({ params }, res) {
    Clients.findOneAndDelete({ _id: params.id })
      .then(dbClientsData => res.json(dbClientsData))
      .catch(err => res.json(err));
  }
};





module.exports = clientsController;